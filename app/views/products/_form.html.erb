<%= form_for [@product] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :origin %>
  <%= f.text_field :origin %>
  <br>
  <%= f.label :notes %>
  <%= f.text_area :notes %>
  <br>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br>
  <%= f.label :featured, "Featured" %>
  <%= f.radio_button :featured, true %>
  <%= f.label :notfeatured, "Not Featured" %>
  <%= f.radio_button :featured, false %>
  <hr>
  <%= f.submit %>
<% end %>
