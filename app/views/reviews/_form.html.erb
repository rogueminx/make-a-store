<%= render "layouts/errors", :object => @review %>

<%= form_for [@product, @review] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  <%= f.label :rating %>
  <%= f.select :rating, [1, 2, 3, 4, 5]%>
  <hr>
  <%= f.submit %>
<% end %>
